<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_pressed"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
<TextView
    android:id="@+id/slogan_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="27dp"
    android:textColor="@color/colorPrimaryDark"
    android:text="Add New Product"
    android:textAlignment="center"
    android:textSize="25sp"
    android:textStyle="bold"
    />
    <LinearLayout
        android:id="@+id/linear1_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/slogan_category"
        android:layout_marginTop="45dp"
        >
         <ImageView
                android:id="@+id/t_shirts"
                 android:layout_width="wrap_content"
                  android:layout_height="80dp"
                      android:src="@drawable/tshirts"/>
    <ImageView
            android:id="@+id/sports"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/sports"/>
        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/female_dresses"/>
        <ImageView
            android:id="@+id/sweather"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/sweather"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/linear1_category"
        android:layout_marginTop="45dp"
        >
        <ImageView
            android:id="@+id/shoesss"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/shoess"/>
        <ImageView
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/glasses"/>
        <ImageView
            android:id="@+id/purses_bags"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"/>
        <ImageView
            android:id="@+id/hats"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/hats"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/linear2_category"
        android:layout_marginTop="45dp"
        >
        <ImageView
            android:id="@+id/headphones"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/headphoness"/>
        <ImageView
            android:id="@+id/laptops"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/laptops"/>
        <ImageView
            android:id="@+id/watches"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/watches"/>
        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/mobiles"/>
    </LinearLayout>
</RelativeLayout>